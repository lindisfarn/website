---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/utils';

const t = getTranslations('fr');
---

<Layout 
  title="Conditions générales | Lindisfarn"
  description="Entente d'adhésion des familles fondatrices pour le poulet élevé en pâturage de Lindisfarn."
>
  <section class="relative px-6 py-20 md:py-28 bg-[#F2F0E9]">
    <div class="max-w-3xl mx-auto mt-24">
      
      <!-- Header -->
      <p class="text-xs tracking-[0.3em] uppercase text-[#2D5016] mb-4 font-['JetBrains_Mono',monospace]">
        {t.terms.label}
      </p>
      
      <h1 class="font-['Cormorant_Garamond',serif] text-4xl md:text-5xl text-[#2B2B2B] mb-3">
        {t.terms.title}
      </h1>
      
      <p class="text-[#4A5A66] font-['JetBrains_Mono',monospace] text-sm mb-12 pb-8 border-b border-[#2B2B2B]/10">
        {t.terms.lastUpdated}
      </p>

      <!-- Content -->
      <div class="space-y-8 font-['EB_Garamond',serif] text-lg text-[#2B2B2B] leading-relaxed">
        
        <p>{t.terms.intro}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.terms.sections.deposit.title}
        </h2>
        <p>{t.terms.sections.deposit.p1}</p>
        <p>{t.terms.sections.deposit.p2}</p>
        <p>{t.terms.sections.deposit.p3}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.terms.sections.pricing.title}
        </h2>
        <p>{t.terms.sections.pricing.p1}</p>
        <p><strong>{t.terms.sections.pricing.howItWorks}</strong></p>
        <ul class="list-disc pl-6 space-y-2">
          {t.terms.sections.pricing.items.map((item: string) => <li>{item}</li>)}
        </ul>
        <p>{t.terms.sections.pricing.payment}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.terms.sections.pickup.title}
        </h2>
        <p>{t.terms.sections.pickup.p1}</p>
        <p><strong>{t.terms.sections.pickup.note}</strong></p>
        <ul class="list-disc pl-6 space-y-2">
          {t.terms.sections.pickup.items.map((item: string) => <li>{item}</li>)}
        </ul>
        <p>{t.terms.sections.pickup.closing}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.terms.sections.liability.title}
        </h2>
        <p>{t.terms.sections.liability.intro}</p>
        <ul class="list-disc pl-6 space-y-2">
          {t.terms.sections.liability.items.map((item: string) => <li>{item}</li>)}
        </ul>
        <p>{t.terms.sections.liability.text}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.terms.sections.quality.title}
        </h2>
        <p>{t.terms.sections.quality.p1}</p>
        <p>{t.terms.sections.quality.p2}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.terms.sections.changes.title}
        </h2>
        <p><strong>{t.terms.sections.changes.byYou}</strong></p>
        <p><strong>{t.terms.sections.changes.byUs}</strong></p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.terms.sections.law.title}
        </h2>
        <p>{t.terms.sections.law.text}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.terms.sections.agreement.title}
        </h2>
        <p>{t.terms.sections.agreement.p1}</p>
        <p>{t.terms.sections.agreement.p2}</p>
        
        <p class="font-['JetBrains_Mono',monospace] text-base text-[#4A5A66] mt-8">
          {t.contact.name}<br/>
          {t.contact.location}<br/>
          {t.contact.email}
        </p>

      </div>

    </div>
  </section>

  <!-- Footer -->
  <footer class="py-16 text-center border-t border-[#2B2B2B]/10 bg-[#F2F0E9]">
    <p class="font-['Cormorant_Garamond',serif] text-2xl italic text-[#4A5A66]">
      {t.footer.motto}
    </p>
    
    <div class="flex justify-center gap-6 mt-8">
      <a href="/fr/confidentialite" class="text-[#4A5A66] text-xs font-['JetBrains_Mono',monospace] hover:text-[#C8A97E] transition-colors">
        {t.footer.privacy}
      </a>
      <a href="/fr/conditions" class="text-[#4A5A66] text-xs font-['JetBrains_Mono',monospace] hover:text-[#C8A97E] transition-colors">
        {t.footer.terms}
      </a>
    </div>
    
    <p class="text-[#4A5A66] text-xs mt-6">
      {t.footer.copyright}
    </p>
  </footer>
</Layout>

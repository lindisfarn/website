---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/utils';

const t = getTranslations('fr');
---

<Layout 
  title="Politique de confidentialité | Lindisfarn"
  description="Comment Lindisfarn collecte, utilise et protège vos renseignements personnels. Pratiques de confidentialité conformes à la LPRPDE."
>
  <section class="relative px-6 py-20 md:py-28 bg-[#F2F0E9]">
    <div class="max-w-3xl mx-auto mt-24">
      
      <!-- Header -->
      <p class="text-xs tracking-[0.3em] uppercase text-[#2D5016] mb-4 font-['JetBrains_Mono',monospace]">
        {t.privacy.label}
      </p>
      
      <h1 class="font-['Cormorant_Garamond',serif] text-4xl md:text-5xl text-[#2B2B2B] mb-3">
        {t.privacy.title}
      </h1>
      
      <p class="text-[#4A5A66] font-['JetBrains_Mono',monospace] text-sm mb-12 pb-8 border-b border-[#2B2B2B]/10">
        {t.privacy.lastUpdated}
      </p>

      <!-- Content -->
      <div class="space-y-8 font-['EB_Garamond',serif] text-lg text-[#2B2B2B] leading-relaxed">
        
        <p>{t.privacy.intro}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.privacy.sections.collect.title}
        </h2>
        <p>{t.privacy.sections.collect.intro}</p>
        <ul class="list-disc pl-6 space-y-2">
          {t.privacy.sections.collect.items.map((item: string) => <li>{item}</li>)}
        </ul>
        <p>{t.privacy.sections.collect.storage}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.privacy.sections.payment.title}
        </h2>
        <p>{t.privacy.sections.payment.text}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.privacy.sections.analytics.title}
        </h2>
        <p>{t.privacy.sections.analytics.intro}</p>
        <ul class="list-disc pl-6 space-y-2">
          {t.privacy.sections.analytics.items.map((item: string) => <li>{item}</li>)}
        </ul>
        <p>{t.privacy.sections.analytics.text}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.privacy.sections.usage.title}
        </h2>
        <p>{t.privacy.sections.usage.intro}</p>
        <ul class="list-disc pl-6 space-y-2">
          {t.privacy.sections.usage.items.map((item: string) => <li>{item}</li>)}
        </ul>
        <p class="font-semibold text-[#2D5016]">{t.privacy.sections.usage.noSale}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.privacy.sections.rights.title}
        </h2>
        <p>{t.privacy.sections.rights.intro}</p>
        <ul class="list-disc pl-6 space-y-2">
          {t.privacy.sections.rights.items.map((item: string) => <li>{item}</li>)}
        </ul>
        <p>{t.privacy.sections.rights.text}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.privacy.sections.security.title}
        </h2>
        <p>{t.privacy.sections.security.text}</p>

        <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl text-[#2B2B2B] mt-10 mb-4">
          {t.privacy.sections.contact.title}
        </h2>
        <p>{t.privacy.sections.contact.intro}</p>
        <p class="font-['JetBrains_Mono',monospace] text-base text-[#4A5A66]">
          {t.contact.name}<br/>
          {t.contact.location}<br/>
          {t.contact.email}
        </p>

      </div>

    </div>
  </section>

  <!-- Footer -->
  <footer class="py-16 text-center border-t border-[#2B2B2B]/10 bg-[#F2F0E9]">
    <p class="font-['Cormorant_Garamond',serif] text-2xl italic text-[#4A5A66]">
      {t.footer.motto}
    </p>
    
    <div class="flex justify-center gap-6 mt-8">
      <a href="/fr/confidentialite" class="text-[#4A5A66] text-xs font-['JetBrains_Mono',monospace] hover:text-[#C8A97E] transition-colors">
        {t.footer.privacy}
      </a>
      <a href="/fr/conditions" class="text-[#4A5A66] text-xs font-['JetBrains_Mono',monospace] hover:text-[#C8A97E] transition-colors">
        {t.footer.terms}
      </a>
    </div>
    
    <p class="text-[#4A5A66] text-xs mt-6">
      {t.footer.copyright}
    </p>
  </footer>
</Layout>

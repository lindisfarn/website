---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/utils';

const t = getTranslations('fr');
---

<Layout 
  title="Notre manifeste | Lindisfarn"
  description="Pourquoi nous élevons des poulets à l'ancienne. Notre engagement envers la vraie nourriture, l'agriculture honnête et la nutrition des familles."
>
  <section class="relative px-6 py-20 md:py-28 bg-[#F2F0E9]">
    <div class="max-w-4xl mx-auto text-center mt-24">
      
      <!-- Section Label -->
      <p class="text-center text-xs tracking-[0.3em] uppercase text-[#2D5016] mb-4 font-['JetBrains_Mono',monospace]">
        {t.manifesto.label}
      </p>
      
      <!-- Title -->
      <h1 class="text-center font-['Cormorant_Garamond',serif] text-4xl md:text-5xl lg:text-6xl text-[#2B2B2B] mb-12 md:mb-16">
        {t.manifesto.title}
      </h1>

      <!-- Content -->
      <div class="prose prose-lg max-w-6xl mx-auto space-y-8 font-['EB_Garamond',serif] text-lg md:text-xl text-[#2B2B2B] leading-relaxed">
        
        <p class="text-xl md:text-2xl font-medium text-center italic text-[#4A5A66]">
          {t.manifesto.motto}
        </p>

        <p>{t.manifesto.p1}</p>
        <p>{t.manifesto.p2}</p>
        <p>{t.manifesto.p3}</p>
        <p>{t.manifesto.p4}</p>
        <p>{t.manifesto.p5}</p>

        <div class="mt-16 pt-8 border-t border-[#4A5A66]/20 text-center">
          <p class="text-xl md:text-2xl font-['Cormorant_Garamond',serif] italic text-[#2B2B2B]">
            {t.manifesto.quote} <br/>
            {t.manifesto.quoteSource}
          </p>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-16 text-center">
        <a 
          href="/fr/#invitation" 
          class="inline-block px-10 py-4 bg-[#2B2B2B] text-[#F2F0E9] font-['JetBrains_Mono',monospace] text-sm tracking-[0.2em] uppercase hover:bg-[#C8A97E] hover:text-[#1a1a1a] transition-colors duration-300"
        >
          {t.manifesto.cta}
        </a>
      </div>

    </div>
  </section>

  <!-- Footer -->
  <footer class="py-16 text-center border-t border-[#2B2B2B]/10 bg-[#F2F0E9]">
    <p class="font-['Cormorant_Garamond',serif] text-2xl italic text-[#4A5A66]">
      {t.footer.motto}
    </p>
    
    <div class="flex justify-center gap-6 mt-8">
      <a href="/fr/confidentialite" class="text-[#4A5A66] text-xs font-['JetBrains_Mono',monospace] hover:text-[#C8A97E] transition-colors">
        {t.footer.privacy}
      </a>
      <a href="/fr/conditions" class="text-[#4A5A66] text-xs font-['JetBrains_Mono',monospace] hover:text-[#C8A97E] transition-colors">
        {t.footer.terms}
      </a>
    </div>
    
    <p class="text-[#4A5A66] text-xs mt-6">
      {t.footer.copyright}
    </p>
  </footer>
</Layout>

---
/**
 * TheLand — Act IV
 * Instagram-style grid gallery
 */
---

<section 
  id="the-land" 
  class="relative bg-[#F2F0E9] py-12 md:py-20 px-6"
>
  <div class="max-w-4xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-8 md:mb-12">
      <p class="font-['JetBrains_Mono',monospace] text-xs tracking-widest text-[#4A5A66] mb-2">
        45.2356° N, 74.6278° W
      </p>
      <h2 class="font-['Cormorant_Garamond',serif] text-2xl md:text-3xl lg:text-4xl text-[#2B2B2B]">
        Glen Robertson, Ontario
      </h2>
      <p class="mt-2 font-['EB_Garamond',serif] text-base text-[#4A5A66]">
        90 minutes from Ottawa. 60 from Montreal.
      </p>
    </div>
    
    <!-- Instagram-style grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-2 md:gap-4">
      <!-- Image 1: Chickens foraging -->
      <div class="aspect-square overflow-hidden rounded-lg">
        <img 
          src="/chickens.png" 
          alt="Heritage chickens foraging on pasture"
          loading="lazy"
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        />
      </div>
      
      <!-- Image 2: Salatin-style broiler pen -->
      <div class="aspect-square overflow-hidden rounded-lg">
        <img 
          src="/broiler-pen.png" 
          alt="Salatin-style broiler pen on pasture"
          loading="lazy"
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        />
      </div>
      
      <!-- Image 3: Hands with fresh eggs -->
      <div class="aspect-square overflow-hidden rounded-lg">
        <img 
          src="/hands-eggs.png" 
          alt="Hands holding fresh farm eggs"
          loading="lazy"
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        />
      </div>
      
      <!-- Image 4: Aerial of farms around Alexandria -->
      <div class="aspect-square overflow-hidden rounded-lg">
        <img 
          src="/aerial-farms.png" 
          alt="Aerial view of farmland around Alexandria, Ontario"
          loading="lazy"
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        />
      </div>
      
      <!-- Image 5: Cornish Cross chicken -->
      <div class="aspect-square overflow-hidden rounded-lg">
        <img 
          src="/cornish-cross.png" 
          alt="Cornish Cross chicken"
          loading="lazy"
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        />
      </div>
      
      <!-- Image 6: Kids with chickens -->
      <div class="aspect-square overflow-hidden rounded-lg">
        <img 
          src="/kids-chickens.png" 
          alt="Children with chickens in a field"
          loading="lazy"
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        />
      </div>
    </div>
  </div>
</section>
